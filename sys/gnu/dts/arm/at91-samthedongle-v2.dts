/dts-v1/;
#include "sama5d2.dtsi"
#include "sama5d2-pinfunc.h"
#include <dt-bindings/mfd/atmel-flexcom.h>
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "BlastShield Portable";
	compatible = "blastwave,blastshield-portable-v2", "atmel,sama5d27",
	    "atmel,sama5d2", "atmel,sama5";

	aliases {
		serial0 = &uart1;	/* DBGU */
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	clocks {
		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <12000000>;
		};
	};

	firmware {
		optee {
			compatible = "linaro,optee-tz";
			method = "smc";
		};
	};

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		/* op-tee secure memory and shared memory */
		optee@28000000 {
			reg = <0x28000000 0xC00000>;
			no-map;
		};
	};

	bt-rfkill {
		compatible = "net,rfkill-gpio";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_bt_rfkill>;
		name = "bt-rfkill";
		reset-gpios = <&pioA PIN_PB2 GPIO_ACTIVE_LOW>;
		type = <2>; /* Bluetooth */
		status = "okay";
	};

	ahb {
		usb0: gadget@00300000 {
			status = "okay";
		};

		sdmmc0: sdio-host@a0000000 {
			bus-width = <8>;
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_sdmmc0_default>;
			non-removable;
			mmc-ddr-1_8v;
			status = "okay";
		};

		sdmmc1: sdio-host@b0000000 {
			bus-width = <4>;
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_sdmmc1_default>;
			cap-mmc-hw-reset;
			cap-mmc-highspeed;
			non-removable;
			status = "okay";
		};



		apb {
			macb0: ethernet@f8008000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_macb0_default>;
				phy-mode = "rmii";
				status = "okay";

				ethernet-phy@0 {
					reg = <0x0>;
					interrupt-parent = <&pioA>;
					interrupts = <PIN_PD20 IRQ_TYPE_LEVEL_LOW>;
					pinctrl-names = "default";
					pinctrl-0 = <&pinctrl_macb0_phy_irq>;
				};
			};

			uart1: serial@f8020000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_uart1_default>;
				atmel,use-dma-rx;
				atmel,use-dma-tx;
				status = "okay";
			};

			flx0: flexcom@f8034000 {
				atmel,flexcom-mode = <ATMEL_FLEXCOM_MODE_TWI>;
				status = "okay";

				i2c@600 {
					compatible = "atmel,sama5d2-i2c";
					reg = <0x600 0x100>;
					interrupts = <19 IRQ_TYPE_LEVEL_HIGH 7>;
					#address-cells = <1>;
					#size-cells = <0>;
					clocks = <&flx0_clk>;
					clock-names = "i2c2_clk";
					clock-frequency = <100000>;
					pinctrl-names = "default";
					pinctrl-0 = <&pinctrl_flx0_i2c>;

					ncp5623: ncp5623@38 {
						compatible = "on,ncp5623";
						reg = <0x38>;
					};

					eeprom: eeprom@50 {
						compatible = "microchip,24c32", "atmel,24c32";
						reg = <0x50>;
						read-only;
						pagesize = <32>;
						status = "okay";
					};

					pmic: pmic@5b {
						compatible = "active-semi,act8945a";
						reg = <0x5b>;
						status = "okay";
					};

					tusb320: tusb320@60 {
						compatible = "huawei,tusb320";
						reg = <0x60>;
					};
				};
			};

			watchdog@f8048040 {
                        				status = "okay";
                        			};


			flx3: flexcom@fc014000 {
				atmel,flexcom-mode = <ATMEL_FLEXCOM_MODE_USART>;
				status = "okay";

				serial@200 {
					compatible = "atmel,at91sam9260-usart";
					reg = <0x200 0x100>;
					interrupts = <22 IRQ_TYPE_LEVEL_HIGH 7>;
					clock-names = "usart";
					clocks = <&flx3_clk>;
					pinctrl-names = "default";
					pinctrl-0 = <&pinctrl_flx3_uart>;
					uart-has-rtscts;
					atmel,fifo-size = <32>;
					status = "okay";
				};
			};

			pinctrl@fc038000 {
				pinctrl_uart1_default: uart1_default {
					pinmux = <PIN_PD2__URXD1>,
						 <PIN_PD3__UTXD1>;
					bias-disable;
				};

				pinctrl_sdmmc0_default: sdmmc0_default {
					cmd_data {
						pinmux = <PIN_PA1__SDMMC0_CMD>,
							 <PIN_PA2__SDMMC0_DAT0>,
							 <PIN_PA3__SDMMC0_DAT1>,
							 <PIN_PA4__SDMMC0_DAT2>,
							 <PIN_PA5__SDMMC0_DAT3>,
							 <PIN_PA6__SDMMC0_DAT4>,
							 <PIN_PA7__SDMMC0_DAT5>,
							 <PIN_PA8__SDMMC0_DAT6>,
							 <PIN_PA9__SDMMC0_DAT7>;
						bias-pull-up;
					};

					ck_cd_rstn_vddsel {
						pinmux = <PIN_PA0__SDMMC0_CK>,
							 <PIN_PA13__SDMMC0_CD>;
						bias-disable;
					};
				};

				pinctrl_sdmmc1_default: sdmmc1_default {
					cmd_data {
						pinmux = <PIN_PA28__SDMMC1_CMD>,
							 <PIN_PA18__SDMMC1_DAT0>,
							 <PIN_PA19__SDMMC1_DAT1>,
							 <PIN_PA20__SDMMC1_DAT2>,
							 <PIN_PA21__SDMMC1_DAT3>;
						bias-pull-up;
					};

					conf-ck_cd {
						pinmux = <PIN_PA22__SDMMC1_CK>,
							 <PIN_PA27__SDMMC1_RSTN>,
							 <PIN_PA30__SDMMC1_CD>;
						bias-disable;
					};
				};

				pinctrl_macb0_default: macb0_default {
					pinmux = <PIN_PC10__GTXCK>,
						 <PIN_PC11__GTXEN>,
						 <PIN_PC12__GRXDV>,
						 <PIN_PC13__GRXER>,
						 <PIN_PC14__GRX0>,
						 <PIN_PC15__GRX1>,
						 <PIN_PC16__GTX0>,
						 <PIN_PC17__GTX1>,
						 <PIN_PC18__GMDC>,
						 <PIN_PC19__GMDIO>;
					bias-disable;
				};

				pinctrl_macb0_phy_irq: macb0_phy_irq {
					pinmux = <PIN_PD20__GPIO>;
					bias-disable;
				};

				pinctrl_flx0_i2c: flx0_i2c {
					pinmux = <PIN_PB28__FLEXCOM0_IO0>,
						 <PIN_PB29__FLEXCOM0_IO1>;
					bias-disable;
				};

				pinctrl_flx3_uart: flx3_uart {
					pinmux = <PIN_PB22__FLEXCOM3_IO1>,
						 <PIN_PB23__FLEXCOM3_IO0>,
						 <PIN_PB24__FLEXCOM3_IO3>,
						 <PIN_PB25__FLEXCOM3_IO4>;
					bias-disable;
				};

				pinctrl_bt_rfkill: bt_rfkill {
					pinmux = <PIN_PB2__GPIO>;
					bias-disable;
				};
			};
		};
	};

	vddin_3v3: fixed-regulator-vddin_3v3 {
		compatible = "regulator-fixed";

		regulator-name = "VDDIN_3V3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
		regulator-boot-on;
		status = "okay";
	};

	vddana: fixed-regulator-vddana {
		compatible = "regulator-fixed";

		regulator-name = "VDDANA";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
		regulator-boot-on;
		vin-supply = <&vddin_3v3>;
		status = "okay";
	};

	advref: fixed-regulator-advref {
		compatible = "regulator-fixed";

		regulator-name = "advref";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
		regulator-boot-on;
		vin-supply = <&vddana>;
		status = "okay";
	};
};
